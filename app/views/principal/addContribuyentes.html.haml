-content_for(:title, 'Coworker - Agregar Contribuyentes')
#content
  .inner
    .topcolumn
      .logo
      %ul#shortcut
        %li
          %a{:href => "bienvenida", :title => "Principal"}
            %img{:alt => "Principal", :src => "../assets/icon/shortcut/home.png"}/
            %strong Principal
        %li
          %a{:href => "#", :title => "Mis Contribuyentes"}
            %img{:alt => "graph", :src => "../assets/icon/shortcut/graph.png"}/
            %strong Graph
        %li
          %a{:href => "#", :title => "Pendiente"}
            %img{:alt => "setting", :src => "../assets/icon/shortcut/setting.png"}/
            %strong Setting
        %li
          %a{:href => "#", :title => "Mensajes"}
            %img{:alt => "messages", :src => "../assets/icon/shortcut/mail.png"}/
            %strong Message
          .notification 10
    .clear
    .onecolumn
      .header
        %span
          %span.ico.gray.connect>
          Contribuyentes
      / End header
      .clear
      .content
        #uploadTab
          .tab_container
            #tab1.tab_content
              .load_page
                .formEl_b
                  %form#validation
                    %fieldset
                      %legend
                        Agregar Contribuyentes
                      .section.numericonly
                        %label
                          Código de Archivo:
                          %small Ingrese el código de la empresa para el archivo, ej 0001
                        %div
                          %input#f_required.xsmall{:class => "validate[required]", :maxlength => "4", :name => "text", :type => "text"}
                      .section
                        %label
                          Nombre de la Empresa:
                          %small Ingrese el nombre de la empresa
                        %div
                          %input#f_required.large{:class => "validate[required]", :name => "f_required", :type => "text"}
                      .section.rifregex
                        %label
                          RIF:
                          %small Ingrese el RIF de la empresa, ej. J123456789
                        %div
                          %input#f_required.small{:class => "validate[required]", :maxlength => "10",:name => "text[]", :type => "text"}
                      .section
                        %label
                          Dirección de la Empresa:
                          %small Ingrese la dirección de la empresa
                        %div
                          %input#f_required.full{:class => "validate[required]", :name => "f_required", :type => "text"}
                      .section
                        %label
                          Teléfonos de la Empresa:
                          %small Ingrese los teléfonos de la empresa
                        %div
                          %input#f_required.full{:class => "validate[required]", :name => "f_required", :type => "text"}
                      .section
                        %label
                          Responsable:
                          %small Ingrese el nombre de la persona de contacto
                        %div
                          %input#f_required.medium{:class => "validate[required]", :name => "f_required", :type => "text"}
                      .section
                        %label
                          Correo Electrónico de la empresa:
                          %small Ingrese el correo electronico de la empresa
                        %div
                          %input#e_required.large{:class => "validate[required,custom[email]]", :name => "e_required", :type => "text"}
                      .section
                        %label
                          Municipio en el que se encuentra:
                          %small Seleccione el municipio de la empresa
                        %div
                          %select.chzn-select{"data-placeholder" => "Seleccione un municipio...", :tabindex => "2"}
                            %option{:value => ""}
                            %option{:value => "Libertador"} Libertador
                            %option{:value => "United Kingdom"} United Kingdom
                            %option{:value => "Afghanistan"} Afghanistan
                            %option{:value => "Albania"} Albania
                            %option{:value => "Algeria"} Algeria
                            %option{:value => "American Samoa"} American Samoa
                            %option{:value => "Andorra"} Andorra
                            %option{:value => "Angola"} Angola
                            %option{:value => "Anguilla"} Anguilla
                      .section
                        %label 
                          Fecha de Cierre de la empresa:
                          %small Seleccione la fecha de cierre de la empresa
                        %div
                          .datepickerInline
                      .section
                        %label
                          Tipo de empresa:
                          %small Seleccione si es contribuyente Ordinario o Especial
                        %div
                          %input#preOrder.tipoEmpresa{:name => "tipoEmpresa", :type => "checkbox", :value => "1"}
                      .section.last
                        %div
                          %a.uibutton.submit_form Agregar Empresa
                          %a.uibutton.special{:onClick => "ResetForm()", :title => "Reset  Form"} Borrar Formulario
            / tab1
        / /END TAB/
        .clear/
  .clear
  #footer
    \© Copyright 2012
    %span.tip
      %a{:href => "#", :title => "Zice Admin"} Your Company Name
/ // End inner
/ // End content